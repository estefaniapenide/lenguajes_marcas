<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
  <xs:element name="biblioteca">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="libro" minOccurs="0" maxOccurs="unbounded">
        <xs:complexType>
        <xs:sequence>
        <xs:element name="titulo" type="xs:string" minOccurs="1" maxOccurs="1"/>
        <xs:element name="autor" type="xs:string" minOccurs="1" maxOccurs="unbounded"/>
        <xs:element name="año" type="xs:string" minOccurs="1" maxOccurs="1"/>
        <xs:element name="editorial" type="xs:string" minOccurs="1" maxOccurs="1"/>
        </xs:sequence>
        <xs:attribute name="codigo" type="xs:string" use="required"/>
        </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>
